const N = 30; 
const NL = 17; 
var pal; 
var t = 0.0;
var lastX = 0.0;
var lastY = 0.0;


function interpLine(v1, v2, weight) {
    let ret = new Array();
    let anti_weight; 
    for (let i=0 ; i<max(v1.length, v2.length) ; ++i) {
	let a = v1[i] || v2[i] || 0;
	let b = v2[i] || v1[i] || 0;
	ret.push(a * weight + b * anti_weight);
    }
    return ret; 
}

function smoothLine(v) {
    let ret = new Array();
    for (let i=0 ; i<v.length ; ++i) {
	ret.push((v[i]+v[i+1]) / 2)
    }
    return ret;
}

function makeLine(n) {
    let v = new Array();
    let dy = 0;
    let y = 0;
    for (let i=0 ; i<=n+1 ; ++i) {
	dy = dy * 0.9 - y / 10;
	if (i < n - 10) {
	    dy = dy + random(-5, 5);      
	}
	y = y + dy;
	v.push(y);
    }
    return smoothLine(smoothLine(v));
}

function drawLine(v, dx, y) {
    beginShape();
    vertex(0, height-1);
    for (let i=0 ; i<N ; ++i) {
	vertex(i * dx, y + v[i])
    }
    vertex((N-1) * dx, height-1);
    endShape();
}

function mousePressed() {
    pal = getRandomPalette();
    background(0);
    stroke(255);

    translate(width / 2, height / 2);
    noFill();
}

function setup() {
    t = 0.0;
    lastX = 0.0;
    lastY = 0.0;
    createCanvas(1600, 900);
    mousePressed();

    rectMode(CENTER);
    angleMode(DEGREES);
}



function draw() {
    t += 0.1;
    

    
}
