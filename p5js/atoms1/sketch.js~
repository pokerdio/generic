let w=400, h=400;
let atoms = [];
const natoms = 10;

function setup() {
    Atom.w = w;
    Atom.h = h;
    createCanvas(w, h);

    rectMode(CENTER);
    angleMode(DEGREES);


    for (let i=0 ; i<natoms ; ++i) { 
	atoms.push(new Atom(random(w), random(h)));
    }
}

function draw() {
    background(0);
    for (let i=0 ; i<atoms.length ; ++i) {
	atoms[i].update();
    }
    FOR (let i=0 ; i<atoms.length ; ++i) {
	atoms[i].display();
    }
}

