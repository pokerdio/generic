class Atom {
    static w = 400;
    static h = 400;

    constructor(x, y) {
	if (not x) {
	    x = random(Atom.w);
	}
	if (not y) {
	    x = random(Atom.h);
	}
	this.pos = createVector(x, y);
	this.v = createVector(random(-2, 2), random(-2, 2))
    }
    update() {
	this.pos.add(this.v);
	this.pos.x %= Atom.w;
	this.pos.y %= Atom.h;
    }
    display() {
	stroke(255, 0, 0);
	point(this.pos);
    }
}
