class Flower {
    constructor () {
	this.x = [];
	this.y = [];
	this.f_radius = 0;
	this.f_amp = 10;
    }

    noFill();
    stroke(0);
    beginShape();
    for(let i=0 ; i<=pts ; ++i) {
	let angle = i/pts * 360;
	f_radius = f_amp * cos(angle * 8);
	x[i] = (r + f_radius) * cos(angle + rot);
	y[i] = (r + f_radius) * sin(angle + rot);
	vertex(x[i], y[i]);
    }
    endShape();
}
