let size = 40
let grid;
let color_pal; 


function myDraw() {
    let x, y, col
    stroke(0);
    strokeWeight(3);
    for (let i=0 ; i<grid.length ; ++i) {
	[x, y, col] = grid[i]
	fill(col);
	rect(x, y, size, size);
    }
    stroke('black');
    fill('white')
    textSize(18);
    text(getRandomPalette.col_name, 10, 20)
}

function myInit() {
    color_pal = getRandomPalette();
    
    grid = [];
    for (let i=0 ; i<width/size ; i++) {
	for (let j=0 ; j<height/size ; j++) {	
	    grid.push([i * size, j * size, random(color_pal)])
	}
    }
}

function mousePressed() {
    myInit();
    myDraw();
}

function setup() {
    createCanvas(400, 320);
    angleMode(DEGREES);
    myInit();
    myDraw();
}


function draw() {
}

